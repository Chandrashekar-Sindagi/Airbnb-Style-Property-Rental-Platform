<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-12 p-4">
    <div class="max-w-md mx-auto">
      <!-- Card Container -->
      <div class="bg-white rounded-3xl shadow-xl p-10 border border-gray-100">

        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">
            Join Us
          </h1>
          <p class="text-gray-500">Create your account to get started</p>
        </div>

        <form action="/signup" method="POST" class="space-y-5">
         
          <%- include('../partials/errors') %>
         
          <!-- Name Fields Row -->
          <div class="grid grid-cols-2 gap-3 mt-6">
            <input
              type="text"
              name="firstName"
              placeholder="First Name"
              value="<%=oldInput.firstName?oldInput.firstName:''%>"
              class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
              required
            />
               <!--value-> This fills the input with old value if validation fails,otherwise empty-->
            <input
              type="text"
              name="lastName"
              placeholder="Last Name"
              value="<%=oldInput.lastName?oldInput.lastName:''%>"
              class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
            />
          </div>

          <!-- Email Field -->
          <input
            type="email"
            name="email"
            placeholder="Email Address"
            value="<%=oldInput.email?oldInput.email:''%>"
            class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
            required
          />

          <!-- Password Field -->
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
            required
          />

          <!-- Confirm Password Field -->
          <input
            type="password"
            name="confirmPassword"
            placeholder="Confirm Password"
            class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
            required
          />

          <!-- User Type Section -->
          <div class="pt-3 pb-2 border-t border-gray-100">
            <p class="font-semibold text-gray-800 mb-3 text-sm">Choose Your Role</p>

            <div class="space-y-3">
              <label class="flex items-center p-3 border border-gray-200 rounded-xl cursor-pointer hover:bg-red-50 hover:border-red-300 transition">
                <input 
                 type="radio" 
                 name="userType" 
                 value="guest" 
                 id="guest"
                 <%= oldInput.userType === "guest" ? "checked" : "" %>
                 class="w-4 h-4 accent-red-500 cursor-pointer"
                  />
                <span class="ml-3 font-medium text-gray-700">Guest - Book Homes</span>
              </label>

              <label class="flex items-center p-3 border border-gray-200 rounded-xl cursor-pointer hover:bg-red-50 hover:border-red-300 transition">
                <input 
                  type="radio" 
                  name="userType" 
                  value="host" 
                  id="host"
                  <%= oldInput.userType === "host" ? "checked" : "" %>
                  class="w-4 h-4 accent-red-500 cursor-pointer"
                />
                <span class="ml-3 font-medium text-gray-700">Host - List Homes</span>
              </label>
            </div>
          </div>

          <!-- Terms Checkbox -->
          <label class="flex items-start p-3 bg-gray-50 rounded-xl cursor-pointer hover:bg-gray-100 transition">
            <input 
              type="checkbox" 
              name="terms" 
              id="terms" 
              required 
              class="w-4 h-4 mt-1 accent-red-500 cursor-pointer"
            />
            <span class="ml-3 text-sm text-gray-700">I agree to the <span class="font-semibold text-gray-900">Terms and Conditions</span></span>
          </label>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-3 bg-red-500 text-white font-bold rounded-xl hover:bg-red-600 transition duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 active:scale-95"
          >
            Create Account
          </button>

          <!-- Login Link -->
          <p class="text-center text-gray-600 text-sm">
            Already have an account? 
            <a href="/login" class="font-semibold text-red-500 hover:text-red-600 transition">Login</a>
          </p>

        </form>
      </div>
    </div>
  </main>

</body>
</html>
