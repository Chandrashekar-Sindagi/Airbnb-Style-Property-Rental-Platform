<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <!-- Include Navigation Bar with isLoggedIn variable -->
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-12 p-4">
    <div class="max-w-md mx-auto">
      <!-- Card Container -->
      <div class="bg-white rounded-3xl shadow-xl p-10 border border-gray-100">

        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 mb-2">
            Welcome Back
          </h1>
          <p class="text-gray-500">Login to your account</p>
        </div>

        <form action="/login" method="POST" class="space-y-5">
          <!-- If there are any validation errors, show the error box -->
          <%- include('../partials/errors') %>

          <!-- Email Field -->
          <div class="relative mt-6">
            <span class="absolute left-3 top-3 text-lg bg-gray-200 rounded-lg w-8 h-8 flex items-center justify-center">ðŸ“§</span>
            <input
              type="email"
              name="email"
              placeholder="Email Address"
              value="<%=oldInput.email?oldInput.email:''%>"
              class="w-full px-4 py-3 pl-14 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
              required
            />
          </div>

          <!-- Password Field -->
          <div class="relative">
            <span class="absolute left-3 top-3 text-lg bg-gray-200 rounded-lg w-8 h-8 flex items-center justify-center">ðŸ”’</span>
            <input
              type="password"
              name="password"
              placeholder="Password"
              class="w-full px-4 py-3 pl-14 border border-gray-200 rounded-xl bg-gray-50 focus:bg-white focus:ring-2 focus:ring-red-500 focus:border-transparent focus:outline-none transition duration-200"
              required
            />
          </div>

          <!-- Submit Button -->
          <button
            type="submit"
            class="w-full py-3 bg-red-500 text-white font-bold rounded-xl hover:bg-red-600 transition duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 active:scale-95 mt-6"
          >
            Sign In
          </button>

          <!-- Signup Link -->
          <p class="text-center text-gray-600 text-sm">
            Don't have an account? 
            <a href="/signup" class="font-semibold text-red-500 hover:text-red-600 transition">Sign Up</a>
          </p>

        </form>
      </div>
    </div>
  </main>

</body>
</html>
